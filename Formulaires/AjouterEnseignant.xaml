<UserControl x:Class="MonProjet.AjouterEnseignant"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:MonProjet"
             Background="#F5F5F5"
             Width="800">
    <UserControl.Resources>
        <!-- Styles personnalisés -->
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="0,20,0,15"/>
        </Style>

        <Style x:Key="FormFieldStyle" TargetType="FrameworkElement">
            <Setter Property="Margin" Value="0,0,15,20"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="25,0"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="20"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid MaxWidth="800" HorizontalAlignment="Center" Margin="20">

            <!-- Header -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Titre et navigation -->
            <materialDesign:Card Grid.Row="0" Padding="25" Margin="0,0,0,20">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <Button Style="{StaticResource MaterialDesignIconButton}" 
                              ToolTip="Retour à la liste"
                              VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="ArrowLeft" Width="24" Height="24"/>
                        </Button>
                        <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="Ajouter un Enseignant" FontSize="24" FontWeight="Bold" 
                                     Foreground="#333"/>
                            <TextBlock Text="Saisissez les informations du nouvel enseignant" 
                                     FontSize="14" Foreground="#666" Margin="0,5,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>

            <!-- Formulaire principal -->
            <materialDesign:Card Grid.Row="1" Padding="20">
                <StackPanel>

                    <!-- Section Informations personnelles -->
                    <TextBlock Text="Informations personnelles" Style="{StaticResource SectionTitleStyle}">
                        <TextBlock.Foreground>
                            <SolidColorBrush Color="#2196F3"/>
                        </TextBlock.Foreground>
                    </TextBlock>

                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <ComboBox Grid.Column="0" Name="CivilityComboBox" 
                                Style="{StaticResource MaterialDesignComboBox}"
                                materialDesign:HintAssist.Hint="Civilité "
                                  FontSize="15"
                                >
                            <ComboBoxItem Content="M."/>
                            <ComboBoxItem Content="Mme"/>
                            <ComboBoxItem Content="Mlle"/>
                        </ComboBox>
                    </Grid>

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0" Name="LastNameTextBox" 
                               Style="{StaticResource MaterialDesignTextBox}"
                               Padding="5,15,10,5"
                               Margin="0,0,10,0"
                               FontSize="15"
                               materialDesign:HintAssist.Hint="Nom "
                               materialDesign:HintAssist.IsFloating="True" HorizontalAlignment="Stretch"/>

                        <TextBox Grid.Column="1" Name="FirstNameTextBox" 
                                 Style="{StaticResource MaterialDesignTextBox}"
                                 Padding="5,15,10,5"
                                 FontSize="15"
                                 materialDesign:HintAssist.Hint="Prénom "
                                 materialDesign:HintAssist.IsFloating="True" HorizontalAlignment="Stretch"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0" Name="PhoneTextBox" 
                               Style="{StaticResource MaterialDesignTextBox}"
                               materialDesign:HintAssist.Hint="Téléphone"
                               materialDesign:HintAssist.IsFloating="True" 
                                 FontSize="15"
                                 Margin="0,10,0,10"/>
                    </Grid>

                    <TextBox Name="AddressTextBox" 
                           materialDesign:HintAssist.Hint="Adresse"
                           materialDesign:HintAssist.IsFloating="True"
                           Style="{StaticResource MaterialDesignTextBox}"
                           AcceptsReturn="True" TextWrapping="Wrap" MaxLines="3"
                             FontSize="15"
                             Margin="0,10,0,10"/>

                    <!-- Section Informations professionnelles -->
                    <TextBlock Text="Informations professionnelles" Style="{StaticResource SectionTitleStyle}">
                        <TextBlock.Foreground>
                            <SolidColorBrush Color="#FF9800"/>
                        </TextBlock.Foreground>
                    </TextBlock>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <ComboBox Grid.Column="0" Name="SubjectComboBox" 
                                Style="{StaticResource MaterialDesignComboBox}"
                                materialDesign:HintAssist.Hint="Matière principale "
                                  FontSize="15"
                                  Padding="5,15,10,5"
                                  Margin="0,0,0,20"
                                >
                            <ComboBoxItem Content="Mathématiques"/>
                            <ComboBoxItem Content="Français"/>
                            <ComboBoxItem Content="Sciences"/>
                            <ComboBoxItem Content="Histoire-Géographie"/>
                            <ComboBoxItem Content="Arts Plastiques"/>
                            <ComboBoxItem Content="Éducation Physique"/>
                            <ComboBoxItem Content="Musique"/>
                            <ComboBoxItem Content="Anglais"/>
                        </ComboBox>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <DatePicker Grid.Column="0" Name="HireDatePicker" 
                                  Style="{StaticResource MaterialDesignDatePicker}"
                                  materialDesign:HintAssist.Hint="Date d'embauche"
                                  materialDesign:HintAssist.IsFloating="True"
                                    FontSize="15"
                                    Padding="5,15,10,5"/>
                    </Grid>

                </StackPanel>
            </materialDesign:Card>

            <!-- Actions du formulaire -->
            <materialDesign:Card Grid.Row="2" Padding="20" Margin="0,20,0,0">
                <Grid>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Style="{StaticResource ActionButtonStyle}" 
                              Background="Transparent" Foreground="#F44336" 
                              BorderBrush="#F44336">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Cancel" Width="18" Height="18"/>
                                <TextBlock Text="Annuler" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource ActionButtonStyle}" 
                              Background="#4CAF50" Foreground="White" 
                              Margin="10,5,5,5">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Check" Width="18" Height="18"/>
                                <TextBlock Text="Enregistrer l'enseignant" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>

        </Grid>
    </ScrollViewer>
</UserControl>
