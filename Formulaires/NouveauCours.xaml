<Window x:Class="MonProjet.NouveauCours"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:MonProjet"
        mc:Ignorable="d"
        Title="NouveauCours" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        ResizeMode="CanResize">
    <Window.Resources>
        <!-- Styles personnalisés -->
        <Style x:Key="SectionCardStyle" TargetType="materialDesign:Card">
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2"/>
        </Style>

        <Style x:Key="FormFieldStyle" TargetType="FrameworkElement">
            <Setter Property="Margin" Value="0,0,15,15"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="20"/>
        </Style>

        <Style x:Key="SubjectColorStyle" TargetType="Border">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#333"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,25">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="Plus" Width="32" Height="32" 
                                       Foreground="#4CAF50" VerticalAlignment="Center"/>
                <TextBlock Text="Nouveau Cours" FontSize="28" FontWeight="Bold" 
                         Foreground="#333" VerticalAlignment="Center" Margin="15,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <materialDesign:PackIcon Kind="CalendarToday" Width="16" Height="16" 
                                       Foreground="#666" VerticalAlignment="Center"/>
                <TextBlock Name="CurrentWeekLabel" Text="Semaine du 2 au 8 Septembre 2025" 
                         VerticalAlignment="Center" FontWeight="Medium" Margin="5,0,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Corps principal -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Informations de base -->
                <materialDesign:Card Style="{StaticResource SectionCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Informations de Base" FontSize="18" FontWeight="Bold" 
                                 Margin="0,0,0,20" Foreground="#333"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="250"/>
                            </Grid.ColumnDefinitions>

                            <!-- Colonne gauche -->
                            <StackPanel Grid.Column="0" Margin="50,0,20,0">

                                <!-- Enseignant -->
                                <StackPanel Style="{StaticResource FormFieldStyle}">
                                    <TextBlock Text="Enseignant *" FontWeight="Medium" Margin="0,0,0,8"/>
                                    <ComboBox Name="EnseignantComboBox" Height="40"
                                            materialDesign:HintAssist.Hint="Sélectionner l'enseignant"
                                            Style="{StaticResource MaterialDesignComboBox}">
                                        <ComboBoxItem Content="M. Dupont - Mathématiques"/>
                                        <ComboBoxItem Content="Mme Martin - Français"/>
                                        <ComboBoxItem Content="M. Bernard - Sciences"/>
                                        <ComboBoxItem Content="Mme Rousseau - Histoire-Géo"/>
                                        <ComboBoxItem Content="M. Sportif - EPS"/>
                                        <ComboBoxItem Content="Mme Artiste - Arts Plastiques"/>
                                        <ComboBoxItem Content="M. Musicien - Musique"/>
                                    </ComboBox>
                                </StackPanel>

                                <!-- Classe -->
                                <StackPanel Style="{StaticResource FormFieldStyle}">
                                    <TextBlock Text="Classe *" FontWeight="Medium" Margin="0,0,0,8"/>
                                    <ComboBox Name="ClasseComboBox" Height="40"
                                            materialDesign:HintAssist.Hint="Sélectionner la classe"
                                            Style="{StaticResource MaterialDesignComboBox}">
                                        <ComboBoxItem Content="CP-A"/>
                                        <ComboBoxItem Content="CP-B"/>
                                        <ComboBoxItem Content="CE1-A"/>
                                        <ComboBoxItem Content="CE1-B"/>
                                        <ComboBoxItem Content="CE2-A"/>
                                        <ComboBoxItem Content="CE2-B"/>
                                        <ComboBoxItem Content="CM1-A"/>
                                        <ComboBoxItem Content="CM1-B"/>
                                        <ComboBoxItem Content="CM2-A"/>
                                        <ComboBoxItem Content="CM2-B"/>
                                    </ComboBox>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Planification -->
                <materialDesign:Card Style="{StaticResource SectionCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Planification" FontSize="18" FontWeight="Bold" 
                                 Margin="0,0,0,20" Foreground="#333"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Planning unique ou récurrent -->
                            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                <TextBlock Text="Type de Planification" FontWeight="Medium" Margin="0,0,0,15"/>

                                <RadioButton Name="RadioPonctuel" Content="Cours ponctuel" IsChecked="True"
                                           Margin="0,0,0,10"/>
                                <RadioButton Name="RadioRecurrent" Content="Cours récurrent"
                                           Margin="0,0,0,10"/>

                                <!-- Date pour cours ponctuel -->
                                <StackPanel Name="PanelPonctuel" Margin="0,15,0,0">
                                    <TextBlock Text="Date *" FontWeight="Medium" Margin="0,0,0,8"/>
                                    <DatePicker Name="DatePicker" Height="40"
                                              materialDesign:HintAssist.Hint="Date du cours"
                                              SelectedDate="{x:Static sys:DateTime.Today}"
                                              Style="{StaticResource MaterialDesignDatePicker}"
                                              xmlns:sys="clr-namespace:System;assembly=mscorlib"/>
                                </StackPanel>

                                <!-- Options pour cours récurrent -->
                                <StackPanel Name="PanelRecurrent" Visibility="Collapsed" Margin="0,15,0,0">
                                    <TextBlock Text="Jour de la Semaine" FontWeight="Medium" Margin="0,0,0,8"/>
                                    <ComboBox Name="JourSemaineComboBox" Height="40"
                                            materialDesign:HintAssist.Hint="Sélectionner le jour"
                                            Style="{StaticResource MaterialDesignComboBox}">
                                        <ComboBoxItem Content="Lundi"/>
                                        <ComboBoxItem Content="Mardi"/>
                                        <ComboBoxItem Content="Mercredi"/>
                                        <ComboBoxItem Content="Jeudi"/>
                                        <ComboBoxItem Content="Vendredi"/>
                                        <ComboBoxItem Content="Samedi"/>
                                    </ComboBox>

                                    <Grid Margin="0,15,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                            <TextBlock Text="Date de Début" FontWeight="Medium" Margin="0,0,0,8"/>
                                            <DatePicker Name="DateDebutRecurrent" Height="40"
                                                      Style="{StaticResource MaterialDesignDatePicker}"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                            <TextBlock Text="Date de Fin" FontWeight="Medium" Margin="0,0,0,8"/>
                                            <DatePicker Name="DateFinRecurrent" Height="40"
                                                      Style="{StaticResource MaterialDesignDatePicker}"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </StackPanel>

                            <!-- Horaires -->
                            <StackPanel Grid.Column="1" Margin="20,0,0,0">
                                <TextBlock Text="Horaires *" FontWeight="Medium" Margin="0,0,0,15"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                        <TextBlock Text="Heure de Début" FontWeight="Medium" Margin="0,0,0,8"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,5,0">
                                            <ComboBox x:Name="hoursDebut" Width="60"
                                            Style="{StaticResource MaterialDesignComboBox}" Margin="0,0,20,0">
                                                <ComboBoxItem Content="00"/>
                                                <ComboBoxItem Content="01"/>
                                                <ComboBoxItem Content="02"/>
                                            </ComboBox>

                                            <ComboBox x:Name="minutesDebut" Width="60"
                                            Style="{StaticResource MaterialDesignComboBox}">
                                                <ComboBoxItem Content="00"/>
                                                <ComboBoxItem Content="15"/>
                                                <ComboBoxItem Content="30"/>
                                                <ComboBoxItem Content="45"/>
                                            </ComboBox>
                                        </StackPanel>


                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                        <TextBlock Text="Heure de Fin" FontWeight="Medium" Margin="0,0,0,8"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,5,0">
                                            <ComboBox x:Name="hoursFin" Width="60"
                                            Style="{StaticResource MaterialDesignComboBox}" Margin="0,0,20,0">
                                                <ComboBoxItem Content="00"/>
                                                <ComboBoxItem Content="01"/>
                                                <ComboBoxItem Content="02"/>
                                            </ComboBox>

                                            <ComboBox x:Name="minutesFin" Width="60"
                                            Style="{StaticResource MaterialDesignComboBox}">
                                                <ComboBoxItem Content="00"/>
                                                <ComboBoxItem Content="15"/>
                                                <ComboBoxItem Content="30"/>
                                                <ComboBoxItem Content="45"/>
                                            </ComboBox>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>

                                <!-- Durée calculée -->
                                <StackPanel Margin="0,15,0,0">
                                    <TextBlock Text="Durée Calculée" FontWeight="Medium" Margin="0,0,0,8"/>
                                    <TextBlock Name="DureeCalculeeLabel" Text="--h --min" 
                                             FontSize="14" Foreground="#2196F3" FontWeight="Bold"/>
                                </StackPanel>

                                <!-- Créneaux suggérés -->
                                <StackPanel Margin="0,20,0,0">
                                    <TextBlock Text="Créneaux Suggérés" FontWeight="Medium" Margin="0,0,0,10"/>
                                    <WrapPanel>
                                        <Button Name="BtnCreneau1" Content="07:00-09:00" 
                                              Style="{StaticResource MaterialDesignOutlinedButton}"
                                              Margin="0,0,5,5" Height="30" />
                                        <Button Name="BtnCreneau2" Content="09:00-11:00" 
                                              Style="{StaticResource MaterialDesignOutlinedButton}"
                                              Margin="0,0,5,5" Height="30" />
                                        <Button Name="BtnCreneau3" Content="09:00-12:00" 
                                              Style="{StaticResource MaterialDesignOutlinedButton}"
                                              Margin="0,0,5,5" Height="30"/>
                                        <Button Name="BtnCreneau4" Content="14:00-16:00" 
                                              Style="{StaticResource MaterialDesignOutlinedButton}"
                                              Margin="0,0,5,5" Height="30"/>
                                        <Button Name="BtnCreneau5" Content="16:00-17:00" 
                                              Style="{StaticResource MaterialDesignOutlinedButton}"
                                              Margin="0,0,5,5" Height="30"/>
                                    </WrapPanel>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Vérification des conflits -->
                <materialDesign:Card Name="ConflitsCard" Style="{StaticResource SectionCardStyle}" 
                                   Background="#FFF3E0" Visibility="Collapsed">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <materialDesign:PackIcon Kind="AlertCircle" Width="24" Height="24" 
                                                   Foreground="#FF9800" VerticalAlignment="Center"/>
                            <TextBlock Text="Conflits Détectés" FontSize="16" FontWeight="Bold" 
                                     VerticalAlignment="Center" Margin="10,0,0,0" Foreground="#E65100"/>
                        </StackPanel>

                        <StackPanel Name="ConflitsPanel">
                            <!-- Les conflits seront ajoutés dynamiquement -->
                        </StackPanel>

                        <Button Name="BtnIgnorerConflits" Content="Ignorer et Continuer"
                              Style="{StaticResource MaterialDesignFlatButton}"
                              Foreground="#FF9800" HorizontalAlignment="Left" Margin="0,10,0,0"/>
                    </StackPanel>
                </materialDesign:Card>

            </StackPanel>
        </ScrollViewer>

        <!-- Actions en bas -->
        <Grid Grid.Row="2" Margin="0,25,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Name="BtnVerifierConflits" 
                      Style="{StaticResource MaterialDesignOutlinedButton}"
                      Margin="0,0,15,0">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AlertCircleOutline" Width="18" Height="18"/>
                            <TextBlock Text="Vérifier Conflits" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="BtnAnnuler" Content="Annuler" 
                      Style="{StaticResource MaterialDesignOutlinedButton}"
                      Margin="0,0,15,0"/>

                <Button Name="BtnCreerCours"  
                      Style="{StaticResource ActionButtonStyle}"
                      Background="#4CAF50" Foreground="White">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Check" Width="18" Height="18"/>
                            <TextBlock Text="Créer le Cours" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
