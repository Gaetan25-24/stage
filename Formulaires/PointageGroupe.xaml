<Window x:Class="MonProjet.PointageGroupe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:MonProjet"
        mc:Ignorable="d"
        Title="PointageGroupe" Width="1000"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        ResizeMode="CanResize">
    <Window.Resources>
        <!-- Styles personnalisés -->
        <Style x:Key="SectionCardStyle" TargetType="materialDesign:Card">
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="20"/>
        </Style>

        <Style x:Key="TeacherItemStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Padding" Value="15,10"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8F9FA"/>
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="AccountMultiplePlus" Width="32" Height="32" 
                                       Foreground="#2196F3" VerticalAlignment="Center"/>
                <TextBlock Text="Pointage Groupé" FontSize="24" FontWeight="Bold" 
                         Foreground="#333" VerticalAlignment="Center" Margin="15,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <materialDesign:PackIcon Kind="CalendarToday" Width="16" Height="16" 
                                       Foreground="#666" VerticalAlignment="Center"/>
                <TextBlock Text="Vendredi 05 Septembre 2025" VerticalAlignment="Center" 
                         FontWeight="Medium" Margin="5,0,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Corps principal -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Section de configuration -->
                <materialDesign:Card Style="{StaticResource SectionCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Configuration du Pointage" FontSize="16" FontWeight="Bold" 
                                 Margin="0,0,0,20" Foreground="#333"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Type de pointage -->
                            <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                <TextBlock Text="Type de Pointage" FontWeight="Medium" Margin="0,0,0,8"/>
                                <ComboBox Name="PointageTypeComboBox" Height="40"
                                        materialDesign:HintAssist.Hint="Sélectionner le type"
                                        Style="{StaticResource MaterialDesignComboBox}">
                                    <ComboBoxItem Content="Arrivée" IsSelected="True"/>
                                    <ComboBoxItem Content="Départ"/>
                                    <ComboBoxItem Content="Absence"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Heure -->
                            <StackPanel Grid.Column="1" Margin="15,0,15,0">
                                <TextBlock Text="Heure" FontWeight="Medium" Margin="0,0,0,8"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Name="TimeTextBox" Grid.Column="0" Height="40"
                                           materialDesign:HintAssist.Hint="HH:mm"
                                           Text="08:30"
                                           Style="{StaticResource MaterialDesignTextBox}"/>
                                    <Button Name="BtnCurrentTime" Grid.Column="1" 
                                          Style="{StaticResource MaterialDesignIconButton}"
                                          ToolTip="Utiliser l'heure actuelle"
                                          Margin="5,0,0,0">
                                        <materialDesign:PackIcon Kind="Clock"/>
                                    </Button>
                                </Grid>
                            </StackPanel>

                            <!-- Date -->
                            <StackPanel Grid.Column="2" Margin="15,0,0,0">
                                <TextBlock Text="Date" FontWeight="Medium" Margin="0,0,0,8"/>
                                <DatePicker Name="PointageDatePicker" Height="40"
                                          materialDesign:HintAssist.Hint="Date du pointage"
                                          SelectedDate="{x:Static sys:DateTime.Today}"
                                          Style="{StaticResource MaterialDesignDatePicker}"
                                          xmlns:sys="clr-namespace:System;assembly=mscorlib"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Section de sélection des enseignants -->
                <materialDesign:Card Style="{StaticResource SectionCardStyle}">
                    <StackPanel>
                        <!-- Header avec actions de sélection -->
                        <Grid Margin="0,0,0,20">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AccountGroup" Width="20" Height="20" 
                                                       Foreground="#2196F3" VerticalAlignment="Center"/>
                                <TextBlock Text="Sélection des Enseignants" FontSize="16" FontWeight="Bold" 
                                         VerticalAlignment="Center" Margin="10,0,0,0" Foreground="#333"/>
                                <TextBlock Name="SelectedCountLabel" Text="(0 sélectionné(s))" 
                                         VerticalAlignment="Center" Margin="10,0,0,0" 
                                         FontStyle="Italic" Foreground="#666"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Name="BtnSelectAll" Content="Tout sélectionner" 
                                      Style="{StaticResource MaterialDesignOutlinedButton}"
                                      Margin="0,0,10,0" Height="32"/>
                                <Button Name="BtnDeselectAll" Content="Tout désélectionner" 
                                      Style="{StaticResource MaterialDesignOutlinedButton}"
                                      Height="32"/>
                            </StackPanel>
                        </Grid>

                        <!-- Filtres -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <ComboBox Name="ClassFilterComboBox" Grid.Column="0" Margin="0,0,10,0"
                                    materialDesign:HintAssist.Hint="Filtrer par classe"
                                    Style="{StaticResource MaterialDesignComboBox}" 
                                    >
                                <ComboBoxItem Content="Toutes les classes" IsSelected="True"/>
                                <ComboBoxItem Content="CP"/>
                                <ComboBoxItem Content="CE1"/>
                                <ComboBoxItem Content="CE2"/>
                                <ComboBoxItem Content="CM1"/>
                                <ComboBoxItem Content="CM2"/>
                            </ComboBox>

                            <ComboBox Name="StatusFilterComboBox" Grid.Column="1" Margin="5,0,5,0"
                                    materialDesign:HintAssist.Hint="Filtrer par statut"
                                    Style="{StaticResource MaterialDesignComboBox}">
                                <ComboBoxItem Content="Tous les statuts" IsSelected="True"/>
                                <ComboBoxItem Content="Présents"/>
                                <ComboBoxItem Content="En retard"/>
                                <ComboBoxItem Content="Absents"/>
                                <ComboBoxItem Content="Non pointés"/>
                            </ComboBox>

                            <TextBox Name="SearchTextBox" Grid.Column="2" Margin="10,0,0,0"
                                   materialDesign:HintAssist.Hint="Rechercher un enseignant..."
                                   Style="{StaticResource MaterialDesignTextBox}">
                                <TextBox.InputBindings>
                                    <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                                </TextBox.InputBindings>
                            </TextBox>
                        </Grid>

                        <!-- Liste des enseignants -->
                        <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
                            <StackPanel Name="TeachersListPanel">

                                <!-- Enseignant 1 -->
                                <Border Style="{StaticResource TeacherItemStyle}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <CheckBox Name="Chk_Dupont" Grid.Column="0" 
                                                VerticalAlignment="Center" Margin="0,0,15,0"/>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="M. Dupont" FontWeight="Medium" FontSize="14"/>
                                            <TextBlock Text="Mathématiques - CE2-A" FontSize="12" 
                                                     Foreground="#666" Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <Border Grid.Column="2" Background="#FFCDD2" CornerRadius="8" 
                                              Padding="6,2" Margin="10,0">
                                            <TextBlock Text="ABSENT" FontSize="10" Foreground="#D32F2F" 
                                                     FontWeight="Bold"/>
                                        </Border>

                                        <materialDesign:PackIcon Grid.Column="3" Kind="Account" 
                                                               Width="24" Height="24" Foreground="#999"
                                                               VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>

                                <!-- Enseignant 2 -->
                                <Border Style="{StaticResource TeacherItemStyle}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <CheckBox Name="Chk_Martin" Grid.Column="0" 
                                                VerticalAlignment="Center" Margin="0,0,15,0"/>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Mme Martin" FontWeight="Medium" FontSize="14"/>
                                            <TextBlock Text="Français - CM1-B" FontSize="12" 
                                                     Foreground="#666" Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <Border Grid.Column="2" Background="#FFF9C4" CornerRadius="8" 
                                              Padding="6,2" Margin="10,0">
                                            <TextBlock Text="RETARD" FontSize="10" Foreground="#F57C00" 
                                                     FontWeight="Bold"/>
                                        </Border>

                                        <materialDesign:PackIcon Grid.Column="3" Kind="Account" 
                                                               Width="24" Height="24" Foreground="#999"
                                                               VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>

                                <!-- Enseignant 3 -->
                                <Border Style="{StaticResource TeacherItemStyle}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <CheckBox Name="Chk_Bernard" Grid.Column="0" 
                                                VerticalAlignment="Center" Margin="0,0,15,0"/>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="M. Bernard" FontWeight="Medium" FontSize="14"/>
                                            <TextBlock Text="Sciences - CM2-A" FontSize="12" 
                                                     Foreground="#666" Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <Border Grid.Column="2" Background="#C8E6C9" CornerRadius="8" 
                                              Padding="6,2" Margin="10,0">
                                            <TextBlock Text="PRÉSENT" FontSize="10" Foreground="#388E3C" 
                                                     FontWeight="Bold"/>
                                        </Border>

                                        <materialDesign:PackIcon Grid.Column="3" Kind="Account" 
                                                               Width="24" Height="24" Foreground="#999"
                                                               VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>

                                <!-- Enseignant 4 -->
                                <Border Style="{StaticResource TeacherItemStyle}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <CheckBox Name="Chk_Rousseau" Grid.Column="0" 
                                                VerticalAlignment="Center" Margin="0,0,15,0"/>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Mme Rousseau" FontWeight="Medium" FontSize="14"/>
                                            <TextBlock Text="Histoire-Géo - CE1-A" FontSize="12" 
                                                     Foreground="#666" Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <Border Grid.Column="2" Background="#C8E6C9" CornerRadius="8" 
                                              Padding="6,2" Margin="10,0">
                                            <TextBlock Text="PRÉSENT" FontSize="10" Foreground="#388E3C" 
                                                     FontWeight="Bold"/>
                                        </Border>

                                        <materialDesign:PackIcon Grid.Column="3" Kind="Account" 
                                                               Width="24" Height="24" Foreground="#999"
                                                               VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>

                                <!-- Enseignant 5 -->
                                <Border Style="{StaticResource TeacherItemStyle}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <CheckBox Name="Chk_Petit" Grid.Column="0" 
                                                VerticalAlignment="Center" Margin="0,0,15,0"/>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Mme Petit" FontWeight="Medium" FontSize="14"/>
                                            <TextBlock Text="Arts Plastiques - CP-B" FontSize="12" 
                                                     Foreground="#666" Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <Border Grid.Column="2" Background="#E1F5FE" CornerRadius="8" 
                                              Padding="6,2" Margin="10,0">
                                            <TextBlock Text="NON POINTÉ" FontSize="10" Foreground="#0277BD" 
                                                     FontWeight="Bold"/>
                                        </Border>

                                        <materialDesign:PackIcon Grid.Column="3" Kind="Account" 
                                                               Width="24" Height="24" Foreground="#999"
                                                               VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>

                                <!-- Enseignant 6 -->
                                <Border Style="{StaticResource TeacherItemStyle}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <CheckBox Name="Chk_Moreau" Grid.Column="0" 
                                                VerticalAlignment="Center" Margin="0,0,15,0"/>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="M. Moreau" FontWeight="Medium" FontSize="14"/>
                                            <TextBlock Text="Éducation Physique - CP-A" FontSize="12" 
                                                     Foreground="#666" Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <Border Grid.Column="2" Background="#E1F5FE" CornerRadius="8" 
                                              Padding="6,2" Margin="10,0">
                                            <TextBlock Text="NON POINTÉ" FontSize="10" Foreground="#0277BD" 
                                                     FontWeight="Bold"/>
                                        </Border>

                                        <materialDesign:PackIcon Grid.Column="3" Kind="Account" 
                                                               Width="24" Height="24" Foreground="#999"
                                                               VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>

                            </StackPanel>
                        </ScrollViewer>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Résumé des modifications -->
                <materialDesign:Card Name="SummaryCard" Style="{StaticResource SectionCardStyle}" 
                                   Background="#FFF8E1" Visibility="Collapsed">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <materialDesign:PackIcon Kind="Information" Width="20" Height="20" 
                                                   Foreground="#FF8F00" VerticalAlignment="Center"/>
                            <TextBlock Text="Résumé des Modifications" FontSize="16" FontWeight="Bold" 
                                     VerticalAlignment="Center" Margin="10,0,0,0" Foreground="#E65100"/>
                        </StackPanel>
                        <TextBlock Name="SummaryText" TextWrapping="Wrap" Foreground="#BF360C"/>
                    </StackPanel>
                </materialDesign:Card>

            </StackPanel>
        </ScrollViewer>

        <!-- Actions en bas -->
        <Grid Grid.Row="2" Margin="0,20,0,0">

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="BtnCancel" Content="Annuler" 
                      Style="{StaticResource MaterialDesignOutlinedButton}"
                      Margin="0,0,15,0"/>

                <Button Name="BtnApply" IsEnabled="False"
                      Style="{StaticResource ActionButtonStyle}"
                      Background="#4CAF50" Foreground="White" >
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Check" Width="18" Height="18"/>
                            <TextBlock Text="Appliquer le Pointage" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
