<Window x:Class="MonProjet.AjouterMatiere"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:MonProjet"
        mc:Ignorable="d" Width="600"    
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="Ajouter une Matière"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    <Window.Resources>
        <Style x:Key="FormCardStyle" TargetType="materialDesign:Card">
            <Setter Property="Margin" Value="20"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2"/>
        </Style>
    </Window.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Header -->
                <Grid Margin="20,20,20,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="BookPlus" Width="32" Height="32" 
                                                Foreground="#4CAF50" VerticalAlignment="Center"/>
                        <TextBlock Text="Nouvelle Classe" FontSize="24" FontWeight="Bold" 
                                  Foreground="#333" VerticalAlignment="Center" Margin="15,0,0,0"/>
                    </StackPanel>
                </Grid>

                <!-- Formulaire principal -->
                <materialDesign:Card Style="{StaticResource FormCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Informations sur une classe" FontSize="16" FontWeight="Bold" 
                                  Foreground="#333" Margin="0,0,0,20"/>

                        <TextBox x:Name="txtLibeleClasse"
                                 materialDesign:HintAssist.Hint="Libelé de la classe "
                                 materialDesign:HintAssist.IsFloating="True"
                                 Margin="0,0,0,20"
                                 Padding="10,15,10,5"
                                 FontSize="14"/>

                    </StackPanel>
                </materialDesign:Card>

                <!-- Boutons d'action -->
                <materialDesign:Card Style="{StaticResource FormCardStyle}" Margin="20,0,20,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Bouton Annuler -->
                        <Button Grid.Column="1" x:Name="btnAnnuler"
                                Style="{StaticResource MaterialDesignFlatButton}"
                                Content="Annuler" 
                                Margin="10,0"
                                Padding="20,0"
                                FontSize="14"/>

                        <!-- Bouton Ajouter -->
                        <Button Grid.Column="2" x:Name="btnAjouter"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="#4CAF50"
                                Foreground="White"
                                Padding="20,10"
                                FontSize="14">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Plus" Width="18" Height="18" VerticalAlignment="Center"/>
                                <TextBlock Text="Ajouter" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
