<UserControl x:Class="MonProjet.Stat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:MonProjet"
             Background="#F5F5F5">
    <UserControl.Resources>
        <!-- Styles personnalisés -->
        <Style x:Key="ChartCardStyle" TargetType="materialDesign:Card">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp3"/>
        </Style>

        <Style x:Key="KpiCardStyle" TargetType="materialDesign:Card">
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2"/>
            <Setter Property="Height" Value="120"/>
        </Style>

        <Style x:Key="FilterButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="18"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Header -->
            <Grid Margin="0,0,0,25">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="ChartLine" Width="32" Height="32" 
                                           Foreground="#2196F3" VerticalAlignment="Center"/>
                    <TextBlock Text="Statistiques et Analyses" FontSize="28" FontWeight="Bold" 
                             Foreground="#333" VerticalAlignment="Center" Margin="15,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <materialDesign:PackIcon Kind="CalendarRange" Width="16" Height="16" 
                                           Foreground="#666" VerticalAlignment="Center"/>
                    <TextBlock Text="Période: " VerticalAlignment="Center" 
                             Foreground="#666" Margin="5,0,0,0"/>
                    <TextBlock Name="CurrentPeriod" Text="Septembre 2025" VerticalAlignment="Center" 
                             FontWeight="Bold"/>
                </StackPanel>
            </Grid>

            <!-- Filtres de période -->
            <materialDesign:Card Margin="0,0,0,20" Padding="20">
                <StackPanel>
                    <TextBlock Text="Sélection de la Période d'Analyse" FontSize="16" FontWeight="Bold" 
                             Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Période prédéfinie -->
                        <StackPanel Grid.Column="0" Margin="0,0,15,0">
                            <TextBlock Text="Période" FontWeight="Medium" Margin="0,0,0,8"/>
                            <ComboBox Name="PeriodSelector" 
                                    materialDesign:HintAssist.Hint="Choisir la période"
                                    Style="{StaticResource MaterialDesignComboBox}">
                                <ComboBoxItem Content="7 derniers jours"/>
                                <ComboBoxItem Content="30 derniers jours"/>
                                <ComboBoxItem Content="Ce mois-ci" IsSelected="True"/>
                                <ComboBoxItem Content="Trimestre actuel"/>
                                <ComboBoxItem Content="Année scolaire"/>
                                <ComboBoxItem Content="Période personnalisée"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Date début -->
                        <StackPanel Grid.Column="1" Margin="15,0">
                            <TextBlock Text="Du" FontWeight="Medium" Margin="0,0,0,8"/>
                            <DatePicker Name="StartDate" 
                                      materialDesign:HintAssist.Hint="Date de début"
                                      Style="{StaticResource MaterialDesignDatePicker}"/>
                        </StackPanel>

                        <!-- Date fin -->
                        <StackPanel Grid.Column="2" Margin="15,0">
                            <TextBlock Text="Au" FontWeight="Medium" Margin="0,0,0,8"/>
                            <DatePicker Name="EndDate" 
                                      materialDesign:HintAssist.Hint="Date de fin"
                                      Style="{StaticResource MaterialDesignDatePicker}"/>
                        </StackPanel>

                        <!-- Boutons d'action -->
                        <StackPanel Grid.Column="3" Margin="20,0,0,0" VerticalAlignment="Bottom">
                            <Button Style="{StaticResource FilterButtonStyle}"
                                  Background="#4CAF50" Foreground="White" >
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Refresh" Width="16" Height="16"/>
                                    <TextBlock Text="Actualiser" Margin="8,0,0,0"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </materialDesign:Card>

            <!-- KPIs principaux -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <materialDesign:Card Grid.Column="0" Style="{StaticResource KpiCardStyle}" >
                    <materialDesign:Card.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#4CAF50" Offset="0"/>
                            <GradientStop Color="#66BB6A" Offset="1"/>
                        </LinearGradientBrush>
                    </materialDesign:Card.Background>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="AccountCheck" Width="24" Height="24" Foreground="White"/>
                        <TextBlock Text="Taux de Présence" FontSize="12" Foreground="White" 
                                 HorizontalAlignment="Center" Margin="0,5,0,0" Opacity="0.9"/>
                        <TextBlock Name="PresenceRate" Text="89.5%" FontSize="20" FontWeight="Bold" 
                                 Foreground="White" HorizontalAlignment="Center"/>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Grid.Column="1" Style="{StaticResource KpiCardStyle}">
                    <materialDesign:Card.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#2196F3" Offset="0"/>
                            <GradientStop Color="#42A5F5" Offset="1"/>
                        </LinearGradientBrush>
                    </materialDesign:Card.Background>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="ClockCheck" Width="24" Height="24" Foreground="White"/>
                        <TextBlock Text="Ponctualité Moyenne" FontSize="12" Foreground="White" 
                                 HorizontalAlignment="Center" Margin="0,5,0,0" Opacity="0.9"/>
                        <TextBlock Name="PunctualityRate" Text="87.3%" FontSize="20" FontWeight="Bold" 
                                 Foreground="White" HorizontalAlignment="Center"/>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Grid.Column="2" Style="{StaticResource KpiCardStyle}">
                    <materialDesign:Card.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#FF9800" Offset="0"/>
                            <GradientStop Color="#FFB74D" Offset="1"/>
                        </LinearGradientBrush>
                    </materialDesign:Card.Background>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="ClockAlert" Width="24" Height="24" Foreground="White"/>
                        <TextBlock Text="Retards Moyens/Jour" FontSize="12" Foreground="White" 
                                 HorizontalAlignment="Center" Margin="0,5,0,0" Opacity="0.9"/>
                        <TextBlock Name="DailyDelays" Text="3.2" FontSize="20" FontWeight="Bold" 
                                 Foreground="White" HorizontalAlignment="Center"/>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Grid.Column="3" Style="{StaticResource KpiCardStyle}">
                    <materialDesign:Card.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#F44336" Offset="0"/>
                            <GradientStop Color="#EF5350" Offset="1"/>
                        </LinearGradientBrush>
                    </materialDesign:Card.Background>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="AccountRemove" Width="24" Height="24" Foreground="White"/>
                        <TextBlock Text="Absences Moyennes" FontSize="12" Foreground="White" 
                                 HorizontalAlignment="Center" Margin="0,5,0,0" Opacity="0.9"/>
                        <TextBlock Name="DailyAbsences" Text="1.8/jour" FontSize="20" FontWeight="Bold" 
                                 Foreground="White" HorizontalAlignment="Center"/>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>

            <!-- Graphiques principaux -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>


                <!-- Graphique de tendance mensuelle -->
                <materialDesign:Card Grid.Column="0" Style="{StaticResource ChartCardStyle}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <materialDesign:PackIcon Kind="TrendingUp" Width="20" Height="20" 
                                                   Foreground="#2196F3" VerticalAlignment="Center"/>
                            <TextBlock Text="Tendances Mensuelles" FontSize="16" FontWeight="Bold" 
                                     VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </StackPanel>

                        <!-- Graphique en courbes -->
                        <Grid Height="300">
                            <Canvas>
                                <!-- Grille de fond -->
                                <Rectangle Width="600" Height="250" Stroke="#F0F0F0" StrokeThickness="1" 
                                         Canvas.Left="40" Canvas.Top="30"/>

                                <!-- Lignes horizontales de grille -->
                                <Line X1="40" Y1="80" X2="640" Y2="80" Stroke="#F5F5F5" StrokeThickness="1"/>
                                <Line X1="40" Y1="130" X2="640" Y2="130" Stroke="#F5F5F5" StrokeThickness="1"/>
                                <Line X1="40" Y1="180" X2="640" Y2="180" Stroke="#F5F5F5" StrokeThickness="1"/>
                                <Line X1="40" Y1="230" X2="640" Y2="230" Stroke="#F5F5F5" StrokeThickness="1"/>

                                <!-- Axes -->
                                <Line X1="40" Y1="30" X2="40" Y2="280" Stroke="#E0E0E0" StrokeThickness="2"/>
                                <Line X1="40" Y1="280" X2="640" Y2="280" Stroke="#E0E0E0" StrokeThickness="2"/>

                                <!-- Courbe de présence (vert) -->
                                <Polyline Points="40,200 90,180 140,170 190,175 240,160 290,155 340,150 390,145 440,140 490,135 540,130 590,125" 
                                        Stroke="#4CAF50" StrokeThickness="3" Fill="Transparent"/>

                                <!-- Courbe de retards (orange) -->
                                <Polyline Points="40,220 90,225 140,215 190,210 240,220 290,215 340,210 390,205 440,200 490,195 540,190 590,185" 
                                        Stroke="#FF9800" StrokeThickness="3" Fill="Transparent"/>

                                <!-- Courbe d'absences (rouge) -->
                                <Polyline Points="40,240 90,245 140,250 190,248 240,252 290,250 340,255 390,253 440,250 490,248 540,245 590,242" 
                                        Stroke="#F44336" StrokeThickness="3" Fill="Transparent"/>

                                <!-- Labels des mois -->
                                <TextBlock Canvas.Left="80" Canvas.Top="290" Text="Jan" FontSize="10" HorizontalAlignment="Center"/>
                                <TextBlock Canvas.Left="130" Canvas.Top="290" Text="Fév" FontSize="10" HorizontalAlignment="Center"/>
                                <TextBlock Canvas.Left="180" Canvas.Top="290" Text="Mar" FontSize="10" HorizontalAlignment="Center"/>
                                <TextBlock Canvas.Left="230" Canvas.Top="290" Text="Avr" FontSize="10" HorizontalAlignment="Center"/>
                                <TextBlock Canvas.Left="280" Canvas.Top="290" Text="Mai" FontSize="10" HorizontalAlignment="Center"/>
                                <TextBlock Canvas.Left="330" Canvas.Top="290" Text="Jun" FontSize="10" HorizontalAlignment="Center"/>
                                <TextBlock Canvas.Left="380" Canvas.Top="290" Text="Jul" FontSize="10" HorizontalAlignment="Center"/>
                                <TextBlock Canvas.Left="430" Canvas.Top="290" Text="Aoû" FontSize="10" HorizontalAlignment="Center"/>
                                <TextBlock Canvas.Left="480" Canvas.Top="290" Text="Sep" FontSize="10" HorizontalAlignment="Center"/>
                                <TextBlock Canvas.Left="530" Canvas.Top="290" Text="Oct" FontSize="10" HorizontalAlignment="Center"/>
                                <TextBlock Canvas.Left="580" Canvas.Top="290" Text="Nov" FontSize="10" HorizontalAlignment="Center"/>
                                <TextBlock Canvas.Left="630" Canvas.Top="290" Text="Déc" FontSize="10" HorizontalAlignment="Center"/>

                                <!-- Labels d'échelle verticale -->
                                <TextBlock Canvas.Left="15" Canvas.Top="275" Text="0%" FontSize="10"/>
                                <TextBlock Canvas.Left="10" Canvas.Top="225" Text="25%" FontSize="10"/>
                                <TextBlock Canvas.Left="10" Canvas.Top="175" Text="50%" FontSize="10"/>
                                <TextBlock Canvas.Left="10" Canvas.Top="125" Text="75%" FontSize="10"/>
                                <TextBlock Canvas.Left="5" Canvas.Top="75" Text="100%" FontSize="10"/>
                                <TextBlock Canvas.Left="25" Canvas.Top="25" Text="%" FontSize="10"/>
                            </Canvas>
                        </Grid>

                        <!-- Légende -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                            <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                                <Rectangle Width="12" Height="3" Fill="#4CAF50" VerticalAlignment="Center"/>
                                <TextBlock Text="Présence" FontSize="12" Margin="5,0,0,0"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                                <Rectangle Width="12" Height="3" Fill="#FF9800" VerticalAlignment="Center"/>
                                <TextBlock Text="Retards" FontSize="12" Margin="5,0,0,0"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Rectangle Width="12" Height="3" Fill="#F44336" VerticalAlignment="Center"/>
                                <TextBlock Text="Absences" FontSize="12" Margin="5,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Répartition par matière -->
                <materialDesign:Card Grid.Column="1" Style="{StaticResource ChartCardStyle}" 
                                   Margin="10,0,0,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <materialDesign:PackIcon Kind="ChartDonut" Width="20" Height="20" 
                                                   Foreground="#2196F3" VerticalAlignment="Center"/>
                            <TextBlock Text="Répartition par Matière" FontSize="16" FontWeight="Bold" 
                                     VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </StackPanel>

                        <!-- Graphique donut simulé -->
                        <Grid Height="200" Width="200" HorizontalAlignment="Center">
                            <Ellipse Width="160" Height="160" Fill="#4CAF50" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                            <!-- Secteurs du donut -->
                            <Path Fill="#2196F3" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathFigure StartPoint="100,20" IsClosed="True">
                                            <ArcSegment Point="160,80" Size="80,80" SweepDirection="Clockwise" IsLargeArc="False"/>
                                            <LineSegment Point="130,70"/>
                                            <ArcSegment Point="100,50" Size="50,50" SweepDirection="CounterClockwise" IsLargeArc="False"/>
                                        </PathFigure>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>

                            <Path Fill="#FF9800" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathFigure StartPoint="160,80" IsClosed="True">
                                            <ArcSegment Point="140,160" Size="80,80" SweepDirection="Clockwise" IsLargeArc="False"/>
                                            <LineSegment Point="120,130"/>
                                            <ArcSegment Point="130,70" Size="50,50" SweepDirection="CounterClockwise" IsLargeArc="False"/>
                                        </PathFigure>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>

                            <Path Fill="#F44336" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathFigure StartPoint="140,160" IsClosed="True">
                                            <ArcSegment Point="60,140" Size="80,80" SweepDirection="Clockwise" IsLargeArc="False"/>
                                            <LineSegment Point="70,120"/>
                                            <ArcSegment Point="120,130" Size="50,50" SweepDirection="CounterClockwise" IsLargeArc="False"/>
                                        </PathFigure>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>

                            <!-- Centre du donut -->
                            <Ellipse Width="80" Height="80" Fill="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="32" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="Enseignants" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,0"/>
                        </Grid>

                        <!-- Légende du donut -->
                        <StackPanel Margin="0,20,0,0">
                            <StackPanel Orientation="Horizontal" Margin="0,3">
                                <Rectangle Width="12" Height="12" Fill="#4CAF50" VerticalAlignment="Center"/>
                                <TextBlock Text="Primaire (18)" FontSize="11" VerticalAlignment="Center" Margin="8,0,0,0"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,3">
                                <Rectangle Width="12" Height="12" Fill="#2196F3" VerticalAlignment="Center"/>
                                <TextBlock Text="Spécialisés (8)" FontSize="11" VerticalAlignment="Center" Margin="8,0,0,0"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,3">
                                <Rectangle Width="12" Height="12" Fill="#FF9800" VerticalAlignment="Center"/>
                                <TextBlock Text="Arts/Sport (4)" FontSize="11" VerticalAlignment="Center" Margin="8,0,0,0"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,3">
                                <Rectangle Width="12" Height="12" Fill="#F44336" VerticalAlignment="Center"/>
                                <TextBlock Text="Remplaçants (2)" FontSize="11" VerticalAlignment="Center" Margin="8,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>

            <!-- Graphiques secondaires -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- Analyse horaire -->
                <materialDesign:Card Grid.Column="0" Style="{StaticResource ChartCardStyle}" 
                                   Margin="0,0,10,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <materialDesign:PackIcon Kind="ClockOutline" Width="20" Height="20" 
                                                   Foreground="#2196F3" VerticalAlignment="Center"/>
                            <TextBlock Text="Répartition des Retards par Heure" FontSize="16" FontWeight="Bold" 
                                     VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </StackPanel>

                        <!-- Graphique en barres horizontales -->
                        <Grid Height="250" Background="#FAFAFA">
                            <Canvas>
                                <!-- Axes -->
                                <Line X1="60" Y1="20" X2="60" Y2="220" Stroke="#E0E0E0" StrokeThickness="1"/>
                                <Line X1="60" Y1="220" X2="400" Y2="220" Stroke="#E0E0E0" StrokeThickness="1"/>

                                <!-- Barres -->
                                <Rectangle Canvas.Left="60" Canvas.Top="25" Width="180" Height="15" Fill="#FF5722"/>
                                <Rectangle Canvas.Left="60" Canvas.Top="50" Width="120" Height="15" Fill="#FF9800"/>
                                <Rectangle Canvas.Left="60" Canvas.Top="75" Width="80" Height="15" Fill="#FFC107"/>
                                <Rectangle Canvas.Left="60" Canvas.Top="100" Width="60" Height="15" Fill="#8BC34A"/>
                                <Rectangle Canvas.Left="60" Canvas.Top="125" Width="40" Height="15" Fill="#4CAF50"/>
                                <Rectangle Canvas.Left="60" Canvas.Top="150" Width="90" Height="15" Fill="#FF9800"/>
                                <Rectangle Canvas.Left="60" Canvas.Top="175" Width="140" Height="15" Fill="#FF5722"/>
                                <Rectangle Canvas.Left="60" Canvas.Top="200" Width="30" Height="15" Fill="#4CAF50"/>

                                <!-- Labels horaires -->
                                <TextBlock Canvas.Left="5" Canvas.Top="27" Text="8h00" FontSize="10" Foreground="#666"/>
                                <TextBlock Canvas.Left="5" Canvas.Top="52" Text="8h30" FontSize="10" Foreground="#666"/>
                                <TextBlock Canvas.Left="5" Canvas.Top="77" Text="9h00" FontSize="10" Foreground="#666"/>
                                <TextBlock Canvas.Left="0" Canvas.Top="102" Text="10h30" FontSize="10" Foreground="#666"/>
                                <TextBlock Canvas.Left="0" Canvas.Top="127" Text="14h00" FontSize="10" Foreground="#666"/>
                                <TextBlock Canvas.Left="0" Canvas.Top="152" Text="14h30" FontSize="10" Foreground="#666"/>
                                <TextBlock Canvas.Left="0" Canvas.Top="177" Text="15h15" FontSize="10" Foreground="#666"/>
                                <TextBlock Canvas.Left="0" Canvas.Top="202" Text="16h00" FontSize="10" Foreground="#666"/>

                                <!-- Valeurs -->
                                <TextBlock Canvas.Left="245" Canvas.Top="27" Text="18" FontSize="10" FontWeight="Bold" Foreground="#333"/>
                                <TextBlock Canvas.Left="185" Canvas.Top="52" Text="12" FontSize="10" FontWeight="Bold" Foreground="#333"/>
                                <TextBlock Canvas.Left="145" Canvas.Top="77" Text="8" FontSize="10" FontWeight="Bold" Foreground="#333"/>
                                <TextBlock Canvas.Left="125" Canvas.Top="102" Text="6" FontSize="10" FontWeight="Bold" Foreground="#333"/>
                                <TextBlock Canvas.Left="105" Canvas.Top="127" Text="4" FontSize="10" FontWeight="Bold" Foreground="#333"/>
                                <TextBlock Canvas.Left="155" Canvas.Top="152" Text="9" FontSize="10" FontWeight="Bold" Foreground="#333"/>
                                <TextBlock Canvas.Left="205" Canvas.Top="177" Text="14" FontSize="10" FontWeight="Bold" Foreground="#333"/>
                                <TextBlock Canvas.Left="95" Canvas.Top="202" Text="3" FontSize="10" FontWeight="Bold" Foreground="#333"/>
                            </Canvas>
                        </Grid>

                        <TextBlock Text="Nombre de retards ce mois-ci" FontSize="11" 
                                 Foreground="#666" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Comparaison mensuelle -->
                <materialDesign:Card Grid.Column="1" Style="{StaticResource ChartCardStyle}" 
                                   Margin="10,0,0,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <materialDesign:PackIcon Kind="Compare" Width="20" Height="20" 
                                                   Foreground="#2196F3" VerticalAlignment="Center"/>
                            <TextBlock Text="Comparaison sur 6 Mois" FontSize="16" FontWeight="Bold" 
                                     VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </StackPanel>

                        <!-- Graphique en colonnes -->
                        <Grid Height="250" Background="#FAFAFA">
                            <Canvas>
                                <!-- Axes -->
                                <Line X1="40" Y1="20" X2="40" Y2="220" Stroke="#E0E0E0" StrokeThickness="1"/>
                                <Line X1="40" Y1="220" X2="380" Y2="220" Stroke="#E0E0E0" StrokeThickness="1"/>

                                <!-- Grille horizontale -->
                                <Line X1="40" Y1="180" X2="380" Y2="180" Stroke="#F5F5F5" StrokeThickness="1"/>
                                <Line X1="40" Y1="140" X2="380" Y2="140" Stroke="#F5F5F5" StrokeThickness="1"/>
                                <Line X1="40" Y1="100" X2="380" Y2="100" Stroke="#F5F5F5" StrokeThickness="1"/>
                                <Line X1="40" Y1="60" X2="380" Y2="60" Stroke="#F5F5F5" StrokeThickness="1"/>

                                <!-- Colonnes présence (vert) -->
                                <Rectangle Canvas.Left="50" Canvas.Top="70" Width="20" Height="150" Fill="#4CAF50"/>
                                <Rectangle Canvas.Left="100" Canvas.Top="80" Width="20" Height="140" Fill="#4CAF50"/>
                                <Rectangle Canvas.Left="150" Canvas.Top="60" Width="20" Height="160" Fill="#4CAF50"/>
                                <Rectangle Canvas.Left="200" Canvas.Top="50" Width="20" Height="170" Fill="#4CAF50"/>
                                <Rectangle Canvas.Left="250" Canvas.Top="45" Width="20" Height="175" Fill="#4CAF50"/>
                                <Rectangle Canvas.Left="300" Canvas.Top="40" Width="20" Height="180" Fill="#4CAF50"/>

                                <!-- Colonnes retards (orange) -->
                                <Rectangle Canvas.Left="75" Canvas.Top="180" Width="15" Height="40" Fill="#FF9800"/>
                                <Rectangle Canvas.Left="125" Canvas.Top="170" Width="15" Height="50" Fill="#FF9800"/>
                                <Rectangle Canvas.Left="175" Canvas.Top="190" Width="15" Height="30" Fill="#FF9800"/>
                                <Rectangle Canvas.Left="225" Canvas.Top="195" Width="15" Height="25" Fill="#FF9800"/>
                                <Rectangle Canvas.Left="275" Canvas.Top="200" Width="15" Height="20" Fill="#FF9800"/>
                                <Rectangle Canvas.Left="325" Canvas.Top="205" Width="15" Height="15" Fill="#FF9800"/>

                                <!-- Labels mois -->
                                <TextBlock Canvas.Left="45" Canvas.Top="230" Text="Avr" FontSize="10" Foreground="#666"/>
                                <TextBlock Canvas.Left="95" Canvas.Top="230" Text="Mai" FontSize="10" Foreground="#666"/>
                                <TextBlock Canvas.Left="145" Canvas.Top="230" Text="Juin" FontSize="10" Foreground="#666"/>
