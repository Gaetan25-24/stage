<UserControl x:Class="MonProjet.Edt"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:MonProjet"
             Background="#F5F5F5">
    <UserControl.Resources>
        <Style x:Key="TimeSlotStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="CornerRadius" Value="3"/>
        </Style>

        <Style x:Key="CourseBlockStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
        </Style>

        <Style x:Key="HeaderCellStyle" TargetType="Border">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="1"/>
        </Style>

        <Style x:Key="WeekNavigationButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="5,0"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Header -->
            <Grid Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Calendar" Width="32" Height="32" 
                                           Foreground="#2196F3" VerticalAlignment="Center"/>
                    <TextBlock Text="Emploi du Temps" FontSize="28" FontWeight="Bold" 
                             Foreground="#333" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Name="BtnNouveauCours" Style="{StaticResource MaterialDesignRaisedButton}" 
                           Background="#4CAF50" Foreground="White" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Plus" Width="16" Height="16"/>
                            <TextBlock Text="Nouveau Cours" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button Name="BtnImprimer" Style="{StaticResource MaterialDesignRaisedButton}" 
                           Background="#607D8B" Foreground="White">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Printer" Width="16" Height="16"/>
                            <TextBlock Text="Imprimer" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Navigation et filtres -->
            <materialDesign:Card Padding="20" Margin="0,0,0,20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Navigation semaine -->
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <Button Name="BtnSemainePrecedente" Style="{StaticResource WeekNavigationButtonStyle}" 
                                   >
                                <materialDesign:PackIcon Kind="ChevronLeft" Width="16" Height="16"/>
                            </Button>
                            <TextBlock Name="SemaineActuelle" Text="Semaine du 2 au 8 Septembre 2025" 
                                     FontSize="18" FontWeight="Bold" VerticalAlignment="Center" Margin="15,0"/>
                            <Button Name="BtnSemaineSuivante" Style="{StaticResource WeekNavigationButtonStyle}" 
                                   >
                                <materialDesign:PackIcon Kind="ChevronRight" Width="16" Height="16"/>
                            </Button>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Name="BtnAujourdhui" Style="{StaticResource MaterialDesignFlatButton}" 
                                    Margin="0,0,10,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="CalendarToday" Width="16" Height="16"/>
                                    <TextBlock Text="Aujourd'hui" Margin="5,0,0,0"/>
                                </StackPanel>
                            </Button>
                            <ToggleButton Name="ToggleVueSemaine" Style="{StaticResource MaterialDesignSwitchToggleButton}" 
                                         IsChecked="True"/>
                            <TextBlock Text="Vue Semaine" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- Filtres -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <TextBlock Text="Filtres:" VerticalAlignment="Center" Margin="0,0,15,0" FontWeight="Medium"/>

                        <ComboBox Name="FilterEnseignant" Width="150" Margin="0,0,10,0"
                                materialDesign:HintAssist.Hint="Enseignant">
                            <ComboBoxItem Content="Tous les enseignants"/>
                            <ComboBoxItem Content="M. Dupont"/>
                            <ComboBoxItem Content="Mme Martin"/>
                            <ComboBoxItem Content="M. Bernard"/>
                            <ComboBoxItem Content="Mme Rousseau"/>
                        </ComboBox>

                        <ComboBox Name="FilterClasse" Width="120" Margin="0,0,10,0"
                                materialDesign:HintAssist.Hint="Classe">
                            <ComboBoxItem Content="Toutes les classes"/>
                            <ComboBoxItem Content="CP-A"/>
                            <ComboBoxItem Content="CP-B"/>
                            <ComboBoxItem Content="CE1-A"/>
                            <ComboBoxItem Content="CE2-A"/>
                            <ComboBoxItem Content="CM1-A"/>
                            <ComboBoxItem Content="CM2-A"/>
                        </ComboBox>

                        <Button Name="BtnResetFilters" Style="{StaticResource MaterialDesignFlatButton}"
                                Margin="15,0,0,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FilterRemove" Width="16" Height="16"/>
                                <TextBlock Text="Réinitialiser" Margin="5,0,0,0"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>

            <!-- Grille de l'emploi du temps -->
            <materialDesign:Card Padding="0">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                    <Grid Name="PlanningGrid" MinWidth="1000">
                        <Grid.RowDefinitions>
                            <!-- En-tête -->
                            <RowDefinition Height="50"/>
                            <!-- Créneaux horaires -->
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="60"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <!-- Colonne heures -->
                            <ColumnDefinition Width="80"/>
                            <!-- Jours de la semaine -->
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- En-têtes des jours -->
                        <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource HeaderCellStyle}">
                            <TextBlock Text="Heure" Foreground="White" FontWeight="Bold" 
                                     HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource HeaderCellStyle}">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="Lundi" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="2 Sept" Foreground="White" FontSize="11" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="0" Grid.Column="2" Style="{StaticResource HeaderCellStyle}">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="Mardi" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="3 Sept" Foreground="White" FontSize="11" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="0" Grid.Column="3" Style="{StaticResource HeaderCellStyle}">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="Mercredi" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="4 Sept" Foreground="White" FontSize="11" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="0" Grid.Column="4" Style="{StaticResource HeaderCellStyle}">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="Jeudi" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="5 Sept" Foreground="White" FontSize="11" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="0" Grid.Column="5" Style="{StaticResource HeaderCellStyle}">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="Vendredi" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="6 Sept" Foreground="White" FontSize="11" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Créneaux horaires -->
                        <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource TimeSlotStyle}" Background="#F5F5F5">
                            <TextBlock Text="08:00" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Medium"/>
                        </Border>
                        <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource TimeSlotStyle}" Background="#F5F5F5">
                            <TextBlock Text="09:00" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Medium"/>
                        </Border>
                        <Border Grid.Row="3" Grid.Column="0" Style="{StaticResource TimeSlotStyle}" Background="#F5F5F5">
                            <TextBlock Text="10:00" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Medium"/>
                        </Border>
                        <Border Grid.Row="4" Grid.Column="0" Style="{StaticResource TimeSlotStyle}" Background="#F5F5F5">
                            <TextBlock Text="11:00" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Medium"/>
                        </Border>
                        <Border Grid.Row="5" Grid.Column="0" Style="{StaticResource TimeSlotStyle}" Background="#F5F5F5">
                            <TextBlock Text="14:00" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Medium"/>
                        </Border>
                        <Border Grid.Row="6" Grid.Column="0" Style="{StaticResource TimeSlotStyle}" Background="#F5F5F5">
                            <TextBlock Text="15:00" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Medium"/>
                        </Border>
                        <Border Grid.Row="7" Grid.Column="0" Style="{StaticResource TimeSlotStyle}" Background="#F5F5F5">
                            <TextBlock Text="16:00" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Medium"/>
                        </Border>
                        <Border Grid.Row="8" Grid.Column="0" Style="{StaticResource TimeSlotStyle}" Background="#F5F5F5">
                            <TextBlock Text="17:00" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Medium"/>
                        </Border>

                        <!-- Cases vides pour les créneaux -->
                        <!-- Lundi -->
                        <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource TimeSlotStyle}"/>

                        <!-- Cours Mathématiques -->
                        <Border Grid.Row="2" Grid.Column="1" Style="{StaticResource CourseBlockStyle}" Background="#E3F2FD">
                            <StackPanel>
                                <TextBlock Text="Mathématiques" FontWeight="Bold" FontSize="12"/>
                                <TextBlock Text="CE2-A • M. Dupont" FontSize="10" Foreground="#666"/>
                            </StackPanel>
                        </Border>

                        <!-- Cours Français -->
                        <Border Grid.Row="3" Grid.Column="1" Style="{StaticResource CourseBlockStyle}" Background="#E8F5E8">
                            <StackPanel>
                                <TextBlock Text="Français" FontWeight="Bold" FontSize="12"/>
                                <TextBlock Text="CE2-A • Mme Martin" FontSize="10" Foreground="#666"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="4" Grid.Column="1" Style="{StaticResource TimeSlotStyle}"/>

                        <!-- Cours Sciences -->
                        <Border Grid.Row="5" Grid.Column="1" Style="{StaticResource CourseBlockStyle}" Background="#FFF3E0">
                            <StackPanel>
                                <TextBlock Text="Sciences" FontWeight="Bold" FontSize="12"/>
                                <TextBlock Text="CE2-A • M. Bernard" FontSize="10" Foreground="#666"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="6" Grid.Column="1" Style="{StaticResource TimeSlotStyle}"/>
                        <Border Grid.Row="7" Grid.Column="1" Style="{StaticResource TimeSlotStyle}"/>
                        <Border Grid.Row="8" Grid.Column="1" Style="{StaticResource TimeSlotStyle}"/>

                        <!-- Mardi -->
                        <Border Grid.Row="1" Grid.Column="2" Style="{StaticResource TimeSlotStyle}"/>

                        <!-- EPS -->
                        <Border Grid.Row="2" Grid.Column="2" Style="{StaticResource CourseBlockStyle}" Background="#FFEBEE">
                            <StackPanel>
                                <TextBlock Text="EPS" FontWeight="Bold" FontSize="12"/>
                                <TextBlock Text="CM1-A • M. Sportif" FontSize="10" Foreground="#666"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="3" Grid.Column="2" Style="{StaticResource TimeSlotStyle}"/>

                        <!-- Histoire-Géo -->
                        <Border Grid.Row="4" Grid.Column="2" Style="{StaticResource CourseBlockStyle}" Background="#F3E5F5">
                            <StackPanel>
                                <TextBlock Text="Histoire-Géo" FontWeight="Bold" FontSize="12"/>
                                <TextBlock Text="CM1-A • Mme Rousseau" FontSize="10" Foreground="#666"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="5" Grid.Column="2" Style="{StaticResource TimeSlotStyle}"/>
                        <Border Grid.Row="6" Grid.Column="2" Style="{StaticResource TimeSlotStyle}"/>
                        <Border Grid.Row="7" Grid.Column="2" Style="{StaticResource TimeSlotStyle}"/>
                        <Border Grid.Row="8" Grid.Column="2" Style="{StaticResource TimeSlotStyle}"/>

                        <!-- Mercredi -->
                        <Border Grid.Row="1" Grid.Column="3" Style="{StaticResource TimeSlotStyle}"/>
                        <Border Grid.Row="2" Grid.Column="3" Style="{StaticResource TimeSlotStyle}"/>

                        <!-- Arts Plastiques -->
                        <Border Grid.Row="3" Grid.Column="3" Style="{StaticResource CourseBlockStyle}" Background="#E0F2F1">
                            <StackPanel>
                                <TextBlock Text="Arts Plastiques" FontWeight="Bold" FontSize="12"/>
                                <TextBlock Text="CP-A • Mme Artiste" FontSize="10" Foreground="#666"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="4" Grid.Column="3" Style="{StaticResource TimeSlotStyle}"/>
                        <Border Grid.Row="5" Grid.Column="3" Style="{StaticResource TimeSlotStyle}"/>
                        <Border Grid.Row="6" Grid.Column="3" Style="{StaticResource TimeSlotStyle}"/>
                        <Border Grid.Row="7" Grid.Column="3" Style="{StaticResource TimeSlotStyle}"/>
                        <Border Grid.Row="8" Grid.Column="3" Style="{StaticResource TimeSlotStyle}"/>

                        <!-- Jeudi -->
                        <Border Grid.Row="1" Grid.Column="4" Style="{StaticResource TimeSlotStyle}"/>

                        <!-- Mathématiques -->
                        <Border Grid.Row="2" Grid.Column="4" Style="{StaticResource CourseBlockStyle}" Background="#E3F2FD">
                            <StackPanel>
                                <TextBlock Text="Mathématiques" FontWeight="Bold" FontSize="12"/>
                                <TextBlock Text="CM2-A • M. Dupont" FontSize="10" Foreground="#666"/>
                            </StackPanel>
                        </Border>

                        <!-- Français -->
                        <Border Grid.Row="3" Grid.Column="4" Style="{StaticResource CourseBlockStyle}" Background="#E8F5E8">
                            <StackPanel>
                                <TextBlock Text="Français" FontWeight="Bold" FontSize="12"/>
                                <TextBlock Text="CM2-A • Mme Martin" FontSize="10" Foreground="#666"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="4" Grid.Column="4" Style="{StaticResource TimeSlotStyle}"/>
                        <Border Grid.Row="5" Grid.Column="4" Style="{StaticResource TimeSlotStyle}"/>
                        <Border Grid.Row="6" Grid.Column="4" Style="{StaticResource TimeSlotStyle}"/>
                        <Border Grid.Row="7" Grid.Column="4" Style="{StaticResource TimeSlotStyle}"/>
                        <Border Grid.Row="8" Grid.Column="4" Style="{StaticResource TimeSlotStyle}"/>

                        <!-- Vendredi -->
                        <Border Grid.Row="1" Grid.Column="5" Style="{StaticResource TimeSlotStyle}"/>
                        <Border Grid.Row="2" Grid.Column="5" Style="{StaticResource TimeSlotStyle}"/>

                        <!-- Musique -->
                        <Border Grid.Row="3" Grid.Column="5" Style="{StaticResource CourseBlockStyle}" Background="#FCE4EC">
                            <StackPanel>
                                <TextBlock Text="Musique" FontWeight="Bold" FontSize="12"/>
                                <TextBlock Text="CE1-A • M. Musicien" FontSize="10" Foreground="#666"/>
                            </StackPanel>
                        </Border>

                        <!-- EPS -->
                        <Border Grid.Row="4" Grid.Column="5" Style="{StaticResource CourseBlockStyle}" Background="#FFEBEE">
                            <StackPanel>
                                <TextBlock Text="EPS" FontWeight="Bold" FontSize="12"/>
                                <TextBlock Text="CE1-A • M. Sportif" FontSize="10" Foreground="#666"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="5" Grid.Column="5" Style="{StaticResource TimeSlotStyle}"/>
                        <Border Grid.Row="6" Grid.Column="5" Style="{StaticResource TimeSlotStyle}"/>
                        <Border Grid.Row="7" Grid.Column="5" Style="{StaticResource TimeSlotStyle}"/>
                        <Border Grid.Row="8" Grid.Column="5" Style="{StaticResource TimeSlotStyle}"/>
                    </Grid>
                </ScrollViewer>
            </materialDesign:Card>

            <!-- Légende des matières -->
            <materialDesign:Card Padding="20" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="Légende des Matières" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

                    <WrapPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,20,10">
                            <Rectangle Width="16" Height="16" Fill="#E3F2FD" Stroke="#2196F3" StrokeThickness="1" Margin="0,0,8,0"/>
                            <TextBlock Text="Mathématiques" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,20,10">
                            <Rectangle Width="16" Height="16" Fill="#E8F5E8" Stroke="#4CAF50" StrokeThickness="1" Margin="0,0,8,0"/>
                            <TextBlock Text="Français" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,20,10">
                            <Rectangle Width="16" Height="16" Fill="#FFF3E0" Stroke="#FF9800" StrokeThickness="1" Margin="0,0,8,0"/>
                            <TextBlock Text="Sciences" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,20,10">
                            <Rectangle Width="16" Height="16" Fill="#F3E5F5" Stroke="#9C27B0" StrokeThickness="1" Margin="0,0,8,0"/>
                            <TextBlock Text="Histoire-Géographie" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,20,10">
                            <Rectangle Width="16" Height="16" Fill="#FFEBEE" Stroke="#F44336" StrokeThickness="1" Margin="0,0,8,0"/>
                            <TextBlock Text="EPS" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,20,10">
                            <Rectangle Width="16" Height="16" Fill="#E0F2F1" Stroke="#009688" StrokeThickness="1" Margin="0,0,8,0"/>
                            <TextBlock Text="Arts Plastiques" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,20,10">
                            <Rectangle Width="16" Height="16" Fill="#FCE4EC" Stroke="#E91E63" StrokeThickness="1" Margin="0,0,8,0"/>
                            <TextBlock Text="Musique" VerticalAlignment="Center"/>
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>
            </materialDesign:Card>

            <!-- Actions rapides -->
            <materialDesign:Card Padding="20" Margin="0,20,0,20">
                <StackPanel>
                    <TextBlock Text="Actions Rapides" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

                    <WrapPanel>

                        <Button Style="{StaticResource MaterialDesignRaisedButton}" 
                               Background="#2196F3" Foreground="White" Margin="0,0,10,10" 
                               >
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FileDocumentOutline" Width="16" Height="16"/>
                                <TextBlock Text="Exporter PDF" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignRaisedButton}" 
                               Background="#FF9800" Foreground="White" Margin="0,0,10,10" 
                               >
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AlertCircle" Width="16" Height="16"/>
                                <TextBlock Text="Détecter Conflits" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignRaisedButton}" 
                               Background="#9C27B0" Foreground="White" Margin="0,0,10,10" 
                               >
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AutoFix" Width="16" Height="16"/>
                                <TextBlock Text="Optimiser Planning" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignRaisedButton}" 
                               Background="#607D8B" Foreground="White" Margin="0,0,10,10" 
                               >
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ContentSaveAll" Width="16" Height="16"/>
                                <TextBlock Text="Sauvegarder Modèle" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignRaisedButton}" 
                               Background="#795548" Foreground="White" Margin="0,0,10,10" 
                               >
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ChartBar" Width="16" Height="16"/>
                                <TextBlock Text="Statistiques" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>
                    </WrapPanel>
                </StackPanel>
            </materialDesign:Card>

            <!-- Résumé de la semaine -->
            <Grid Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Charge de travail -->
                <materialDesign:Card Grid.Column="0" Padding="20" Margin="0,0,10,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <materialDesign:PackIcon Kind="ChartLine" Width="20" Height="20" 
                                                   Foreground="#2196F3" VerticalAlignment="Center"/>
                            <TextBlock Text="Charge de Travail Enseignants" FontSize="16" FontWeight="Bold" 
                                     VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </StackPanel>

                        <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="M. Dupont" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="18h" FontWeight="Bold" 
                                             HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <ProgressBar Grid.Column="2" Value="75" Maximum="100" Height="8" 
                                               Foreground="#4CAF50" VerticalAlignment="Center"/>
                                </Grid>

                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Mme Martin" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="22h" FontWeight="Bold" 
                                             HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <ProgressBar Grid.Column="2" Value="92" Maximum="100" Height="8" 
                                               Foreground="#FF9800" VerticalAlignment="Center"/>
                                </Grid>

                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="M. Bernard" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="16h" FontWeight="Bold" 
                                             HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <ProgressBar Grid.Column="2" Value="67" Maximum="100" Height="8" 
                                               Foreground="#4CAF50" VerticalAlignment="Center"/>
                                </Grid>

                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Mme Rousseau" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="20h" FontWeight="Bold" 
                                             HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <ProgressBar Grid.Column="2" Value="83" Maximum="100" Height="8" 
                                               Foreground="#4CAF50" VerticalAlignment="Center"/>
                                </Grid>

                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="M. Sportif" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="24h" FontWeight="Bold" 
                                             HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <ProgressBar Grid.Column="2" Value="100" Maximum="100" Height="8" 
                                               Foreground="#F44336" VerticalAlignment="Center"/>
                                </Grid>
                            </StackPanel>
                        </ScrollViewer>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Utilisation des salles -->
