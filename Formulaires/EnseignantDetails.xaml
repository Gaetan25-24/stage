<UserControl x:Class="MonProjet.EnseignantDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:MonProjet"
             Width="1000"
             Background="#F5F5F5">
    <UserControl.Resources>
        <!-- Styles personnalisés -->
        <Style x:Key="SectionCardStyle" TargetType="materialDesign:Card">
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="StatCardStyle" TargetType="materialDesign:Card">
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp1"/>
        </Style>

        <Style x:Key="MetricLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="MetricValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">
            <!-- Header avec photo et infos principales -->
            <materialDesign:Card Style="{StaticResource SectionCardStyle}" Background="#2196F3">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Photo de profil -->
                    <Border Grid.Column="0" Width="120" Height="120" CornerRadius="60" 
                            Background="#FFF" Margin="0,0,25,0">
                        <materialDesign:PackIcon Kind="Account" Width="60" Height="60" 
                                               Foreground="#2196F3" HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"/>
                    </Border>

                    <!-- Informations principales -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="M. Bernard" FontSize="32" FontWeight="Bold" 
                                 Foreground="White" Margin="0,0,0,5"/>
                        <TextBlock Text="Professeur des Écoles" FontSize="16" 
                                 Foreground="#E3F2FD" Margin="0,0,0,10"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <materialDesign:PackIcon Grid.Row="0" Grid.Column="0" Kind="BookOpenPageVariant" 
                                                   Width="16" Height="16" Foreground="White" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="Sciences - CM2-A" 
                                     Foreground="White" FontSize="14" Margin="0,0,0,5"/>

                            <materialDesign:PackIcon Grid.Row="1" Grid.Column="0" Kind="Email" 
                                                   Width="16" Height="16" Foreground="White" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="m.bernard@ecole.fr" 
                                     Foreground="White" FontSize="14" Margin="0,0,0,5"/>

                            <materialDesign:PackIcon Grid.Row="2" Grid.Column="0" Kind="CalendarAccount" 
                                                   Width="16" Height="16" Foreground="White" Margin="0,0,10,0"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="12 ans d'ancienneté" 
                                     Foreground="White" FontSize="14"/>
                        </Grid>
                    </StackPanel>

                    <!-- Actions rapides -->
                    <StackPanel Grid.Column="2" VerticalAlignment="Top">
                        <Button Style="{StaticResource MaterialDesignIconButton}" 
                              Background="White" Foreground="#2196F3" Width="40" Height="40"
                              ToolTip="Modifier profil" Margin="0,0,0,10">
                            <materialDesign:PackIcon Kind="Edit" Width="20" Height="20"/>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignIconButton}" 
                              Background="White" Foreground="#2196F3" Width="40" Height="40"
                              ToolTip="Fermer">
                            <materialDesign:PackIcon Kind="Close" Width="20" Height="20"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>

            <!-- Métriques principales -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <materialDesign:Card Grid.Column="0" Style="{StaticResource StatCardStyle}" Background="#E8F5E8">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="96%" Style="{StaticResource MetricValueStyle}" Foreground="#4CAF50"/>
                        <TextBlock Text="Ponctualité" Style="{StaticResource MetricLabelStyle}"/>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Grid.Column="1" Style="{StaticResource StatCardStyle}" Background="#FFF3E0">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="2" Style="{StaticResource MetricValueStyle}" Foreground="#FF9800"/>
                        <TextBlock Text="Absences" Style="{StaticResource MetricLabelStyle}"/>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Grid.Column="2" Style="{StaticResource StatCardStyle}" Background="#E3F2FD">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="38h" Style="{StaticResource MetricValueStyle}" Foreground="#2196F3"/>
                        <TextBlock Text="Cette semaine" Style="{StaticResource MetricLabelStyle}"/>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Grid.Column="3" Style="{StaticResource StatCardStyle}" Background="#F3E5F5">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="50h" Style="{StaticResource MetricValueStyle}" Foreground="#9C27B0"/>
                        <TextBlock Text="Ce mois" Style="{StaticResource MetricLabelStyle}"/>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <!-- Informations personnelles -->
                    <materialDesign:Card Style="{StaticResource SectionCardStyle}">
                        <StackPanel>
                            <TextBlock Text="Informations Personnelles" Style="{StaticResource SectionTitleStyle}"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Nom complet:" FontWeight="Medium" Margin="0,5"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="Bernard Michel" Margin="0,5"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Date de naissance:" FontWeight="Medium" Margin="0,5"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="15 Mars 1978" Margin="0,5"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Téléphone:" FontWeight="Medium" Margin="0,5"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="06 12 34 56 78" Margin="0,5"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Adresse:" FontWeight="Medium" Margin="0,5"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="123 Rue de l'École, 75001 Paris" Margin="0,5"/>

                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Situation familiale:" FontWeight="Medium" Margin="0,5"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" Text="Marié, 2 enfants" Margin="0,5"/>

                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Date d'embauche:" FontWeight="Medium" Margin="0,5"/>
                                <TextBlock Grid.Row="5" Grid.Column="1" Text="1er Septembre 2011" Margin="0,5"/>
                            </Grid>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- Historique de pointage -->
                    <materialDesign:Card Style="{StaticResource SectionCardStyle}">
                        <StackPanel>
                            <TextBlock Text="Historique de Pointage" Style="{StaticResource SectionTitleStyle}"/>

                            <!-- Tableau personnalisé avec StackPanels -->
                            <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5">
                                <!-- En-tête du tableau -->
                                <StackPanel>
                                    <Grid Background="#F5F5F5" Margin="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Date" FontWeight="Bold" Margin="10,8" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="Jour" FontWeight="Bold" Margin="10,8" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="Arrivée" FontWeight="Bold" Margin="10,8" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="3" Text="Départ" FontWeight="Bold" Margin="10,8" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="4" Text="Heures" FontWeight="Bold" Margin="10,8" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="5" Text="Statut" FontWeight="Bold" Margin="10,8" VerticalAlignment="Center"/>
                                    </Grid>

                                    <!-- Ligne 1 -->
                                    <Grid Background="White">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="11/03/2024" FontWeight="Medium" Margin="10,8" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="Lundi" Margin="10,8" VerticalAlignment="Center" FontSize="12" Foreground="#666"/>
                                        <TextBlock Grid.Column="2" Text="08:15" Margin="10,8" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="3" Text="16:30" Margin="10,8" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="4" Text="8h00" Margin="10,8" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#2196F3"/>
                                        <TextBlock Grid.Column="5" Text="Présent" Margin="10,8" VerticalAlignment="Center" FontSize="12"/>
                                    </Grid>
                                    <Border Height="1" Background="#E0E0E0"/>

                                    <!-- Ligne 2 -->
                                    <Grid Background="White">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="12/03/2024" FontWeight="Medium" Margin="10,8" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="Mardi" Margin="10,8" VerticalAlignment="Center" FontSize="12" Foreground="#666"/>
                                        <TextBlock Grid.Column="2" Text="08:10" Margin="10,8" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="3" Text="15:00" Margin="10,8" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="4" Text="6h30" Margin="10,8" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#2196F3"/>
                                        <TextBlock Grid.Column="5" Text="Formation" Margin="10,8" VerticalAlignment="Center" FontSize="12"/>
                                    </Grid>
                                    <Border Height="1" Background="#E0E0E0"/>

                                    <!-- Ligne 3 -->
                                    <Grid Background="White">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="13/03/2024" FontWeight="Medium" Margin="10,8" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="Mercredi" Margin="10,8" VerticalAlignment="Center" FontSize="12" Foreground="#666"/>
                                        <TextBlock Grid.Column="2" Text="08:20" Margin="10,8" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="3" Text="12:15" Margin="10,8" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="4" Text="4h00" Margin="10,8" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#2196F3"/>
                                        <TextBlock Grid.Column="5" Text="Présent" Margin="10,8" VerticalAlignment="Center" FontSize="12"/>
                                    </Grid>
                                    <Border Height="1" Background="#E0E0E0"/>

                                    <!-- Ligne 4 -->
                                    <Grid Background="White">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="14/03/2024" FontWeight="Medium" Margin="10,8" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="Jeudi" Margin="10,8" VerticalAlignment="Center" FontSize="12" Foreground="#666"/>
                                        <TextBlock Grid.Column="2" Text="08:15" Margin="10,8" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="3" Text="16:15" Margin="10,8" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="4" Text="8h00" Margin="10,8" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#2196F3"/>
                                        <TextBlock Grid.Column="5" Text="Présent" Margin="10,8" VerticalAlignment="Center" FontSize="12"/>
                                    </Grid>
                                    <Border Height="1" Background="#E0E0E0"/>

                                    <!-- Ligne 5 -->
                                    <Grid Background="White">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="15/03/2024" FontWeight="Medium" Margin="10,8" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="Vendredi" Margin="10,8" VerticalAlignment="Center" FontSize="12" Foreground="#666"/>
                                        <TextBlock Grid.Column="2" Text="08:05" Margin="10,8" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="3" Text="16:10" Margin="10,8" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="4" Text="8h00" Margin="10,8" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#2196F3"/>
                                        <TextBlock Grid.Column="5" Text="Conseil" Margin="10,8" VerticalAlignment="Center" FontSize="12"/>
                                    </Grid>
                                    <Border Height="1" Background="#E0E0E0"/>

                                    <!-- Ligne 6 -->
                                    <Grid Background="White">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="18/03/2024" FontWeight="Medium" Margin="10,8" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="Lundi" Margin="10,8" VerticalAlignment="Center" FontSize="12" Foreground="#666"/>
                                        <TextBlock Grid.Column="2" Text="08:30" Margin="10,8" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#FF9800"/>
                                        <TextBlock Grid.Column="3" Text="16:30" Margin="10,8" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="4" Text="7h30" Margin="10,8" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#2196F3"/>
                                        <TextBlock Grid.Column="5" Text="Retard" Margin="10,8" VerticalAlignment="Center" FontSize="12" Foreground="#FF9800"/>
                                    </Grid>
                                    <Border Height="1" Background="#E0E0E0"/>

                                    <!-- Ligne 7 -->
                                    <Grid Background="White">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="19/03/2024" FontWeight="Medium" Margin="10,8" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="Mardi" Margin="10,8" VerticalAlignment="Center" FontSize="12" Foreground="#666"/>
                                        <TextBlock Grid.Column="2" Text="08:15" Margin="10,8" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="3" Text="15:00" Margin="10,8" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="4" Text="6h30" Margin="10,8" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#2196F3"/>
                                        <TextBlock Grid.Column="5" Text="Formation" Margin="10,8" VerticalAlignment="Center" FontSize="12"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Résumé des heures -->
                            <Border Background="#F8F9FA" CornerRadius="5" Padding="15" Margin="0,15,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                        <TextBlock Text="Semaine Actuelle" FontSize="12" Foreground="#666" HorizontalAlignment="Center"/>
                                        <TextBlock Text="38h00" FontSize="18" FontWeight="Bold" Foreground="#2196F3" HorizontalAlignment="Center"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                        <TextBlock Text="Semaine Précédente" FontSize="12" Foreground="#666" HorizontalAlignment="Center"/>
                                        <TextBlock Text="34h30" FontSize="18" FontWeight="Bold" Foreground="#4CAF50" HorizontalAlignment="Center"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                        <TextBlock Text="Moyenne Mensuelle" FontSize="12" Foreground="#666" HorizontalAlignment="Center"/>
                                        <TextBlock Text="36h15" FontSize="18" FontWeight="Bold" Foreground="#FF9800" HorizontalAlignment="Center"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                        <TextBlock Text="Total Mars" FontSize="12" Foreground="#666" HorizontalAlignment="Center"/>
                                        <TextBlock Text="145h00" FontSize="18" FontWeight="Bold" Foreground="#9C27B0" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </materialDesign:Card>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <!-- Planning de la semaine -->
                    <materialDesign:Card Style="{StaticResource SectionCardStyle}">
                        <StackPanel>
                            <TextBlock Text="Planning Semaine" Style="{StaticResource SectionTitleStyle}"/>

                            <StackPanel>
                                <Border Background="#E3F2FD" CornerRadius="5" Padding="10" Margin="0,5">
                                    <StackPanel>
                                        <TextBlock Text="Lundi" FontWeight="Bold" Foreground="#1976D2"/>
                                        <TextBlock Text="8h30-12h : CM2-A Sciences" FontSize="12"/>
                                        <TextBlock Text="14h-16h : CM1-B Sciences" FontSize="12"/>
                                        <TextBlock Text="Total: 8h" FontSize="11" Foreground="#1976D2" FontWeight="Bold" HorizontalAlignment="Right"/>
                                    </StackPanel>
                                </Border>

                                <Border Background="#E8F5E8" CornerRadius="5" Padding="10" Margin="0,5">
                                    <StackPanel>
                                        <TextBlock Text="Mardi" FontWeight="Bold" Foreground="#388E3C"/>
                                        <TextBlock Text="8h30-12h : CM2-A Sciences" FontSize="12"/>
                                        <TextBlock Text="14h-15h : Formation continue" FontSize="12"/>
                                        <TextBlock Text="Total: 6h30" FontSize="11" Foreground="#388E3C" FontWeight="Bold" HorizontalAlignment="Right"/>
                                    </StackPanel>
                                </Border>

                                <Border Background="#FFF3E0" CornerRadius="5" Padding="10" Margin="0,5">
                                    <StackPanel>
                                        <TextBlock Text="Mercredi" FontWeight="Bold" Foreground="#F57C00"/>
                                        <TextBlock Text="8h30-12h : CM2-A Sciences" FontSize="12"/>
                                        <TextBlock Text="Après-midi libre" FontSize="12"/>
                                        <TextBlock Text="Total: 4h" FontSize="11" Foreground="#F57C00" FontWeight="Bold" HorizontalAlignment="Right"/>
                                    </StackPanel>
                                </Border>

                                <Border Background="#F3E5F5" CornerRadius="5" Padding="10" Margin="0,5">
                                    <StackPanel>
                                        <TextBlock Text="Jeudi" FontWeight="Bold" Foreground="#7B1FA2"/>
                                        <TextBlock Text="8h30-12h : CM2-A Sciences" FontSize="12"/>
                                        <TextBlock Text="14h-16h : CM1-B Sciences" FontSize="12"/>
                                        <TextBlock Text="Total: 8h" FontSize="11" Foreground="#7B1FA2" FontWeight="Bold" HorizontalAlignment="Right"/>
                                    </StackPanel>
                                </Border>

                                <Border Background="#E0F2F1" CornerRadius="5" Padding="10" Margin="0,5">
                                    <StackPanel>
                                        <TextBlock Text="Vendredi" FontWeight="Bold" Foreground="#00695C"/>
                                        <TextBlock Text="8h30-12h : CM2-A Sciences" FontSize="12"/>
                                        <TextBlock Text="14h-16h : Conseil de classe" FontSize="12"/>
                                        <TextBlock Text="Total: 8h" FontSize="11" Foreground="#00695C" FontWeight="Bold" HorizontalAlignment="Right"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- Total hebdomadaire -->
                            <Border Background="#2196F3" CornerRadius="5" Padding="15" Margin="0,10,0,0">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                                    <TextBlock Text="Total Semaine:" Foreground="White" FontWeight="Bold"/>
                                    <TextBlock Text="34h30" Foreground="White" FontSize="18" FontWeight="Bold"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- Analyse de présence -->
                    <materialDesign:Card Style="{StaticResource SectionCardStyle}">
                        <StackPanel>
                            <TextBlock Text="Analyse Présence" Style="{StaticResource SectionTitleStyle}"/>

                            <StackPanel>
                                <Border Background="#E8F5E8" CornerRadius="5" Padding="10" Margin="0,5">
                                    <Grid>
                                        <StackPanel>
                                            <TextBlock Text="Jours présents cette semaine" FontWeight="Bold" FontSize="12"/>
                                            <TextBlock Text="5/5 jours" FontSize="14" Foreground="#4CAF50" FontWeight="Bold"/>
                                        </StackPanel>
                                        <materialDesign:PackIcon Kind="CheckCircle" Width="24" Height="24" 
                                                               Foreground="#4CAF50" HorizontalAlignment="Right"/>
                                    </Grid>
                                </Border>

                                <Border Background="#FFF3E0" CornerRadius="5" Padding="10" Margin="0,5">
                                    <Grid>
                                        <StackPanel>
                                            <TextBlock Text="Retards ce mois" FontWeight="Bold" FontSize="12"/>
                                            <TextBlock Text="1 retard" FontSize="14" Foreground="#FF9800" FontWeight="Bold"/>
                                        </StackPanel>
                                        <materialDesign:PackIcon Kind="ClockAlert" Width="24" Height="24" 
                                                               Foreground="#FF9800" HorizontalAlignment="Right"/>
                                    </Grid>
                                </Border>

                                <Border Background="#E3F2FD" CornerRadius="5" Padding="10" Margin="0,5">
                                    <Grid>
                                        <StackPanel>
                                            <TextBlock Text="Heures supplémentaires" FontWeight="Bold" FontSize="12"/>
                                            <TextBlock Text="+3h30" FontSize="14" Foreground="#2196F3" FontWeight="Bold"/>
                                        </StackPanel>
                                        <materialDesign:PackIcon Kind="TrendingUp" Width="24" Height="24" 
                                                               Foreground="#2196F3" HorizontalAlignment="Right"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </materialDesign:Card>
                </StackPanel>
            </Grid>

            <!-- Footer avec boutons d'action -->
            <Grid Margin="0,20,0,0">
