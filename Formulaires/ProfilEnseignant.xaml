                            <Grid Margin="0,3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <materialDesign:PackIcon Grid.Column="0" Kind="BookOpenPageVariant" 
                                                       Width="14" Height="14" Foreground="#666"/>
                                <TextBlock Grid.Column="1" Text="Éducation Physique - CP-A" FontSize="12" 
