<UserControl x:Class="MonProjet.PointagePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:MonProjet"
             Background="#F5F5F5">

    <UserControl.Resources>
        <!-- Styles personnalisés -->
        <Style x:Key="ProfileCardStyle" TargetType="materialDesign:Card">
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="15"/>
        </Style>

        <Style x:Key="FilterComboStyle" TargetType="ComboBox">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="materialDesign:HintAssist.IsFloating" Value="False"/>
        </Style>

        <Style x:Key="StatusBadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="6,2"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Header -->
            <Grid Margin="0,0,0,25">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Account" Width="32" Height="32" 
                                           Foreground="#2196F3" VerticalAlignment="Center"/>
                    <TextBlock Text="Profils des Enseignants" FontSize="28" FontWeight="Bold" 
                             Foreground="#333" VerticalAlignment="Center" Margin="15,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="Total: " VerticalAlignment="Center" Foreground="#666"/>
                    <TextBlock Name="TotalTeachers" Text="32 enseignants" VerticalAlignment="Center" 
                             FontWeight="Bold" Margin="3,0,0,0"/>
                </StackPanel>
            </Grid>

            <!-- Barre de recherche et filtres -->
            <materialDesign:Card Margin="0,0,0,20" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Première ligne : Recherche et bouton Ajouter -->
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Name="SearchTextBox" Grid.Column="0" 
                               materialDesign:HintAssist.Hint="Rechercher un enseignant..."
                               Style="{StaticResource MaterialDesignTextBox}"
                               FontSize="14">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                            </TextBox.InputBindings>
                        </TextBox>

                        <Button Grid.Column="1" Style="{StaticResource MaterialDesignRaisedButton}"
                              Background="#4CAF50" Foreground="White" Margin="15,0,0,0"
                              Padding="20,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AccountPlus" Width="18" Height="18"/>
                                <TextBlock Text="Ajouter Enseignant" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <!-- Deuxième ligne : Filtres -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <TextBlock Text="Filtrer par:" VerticalAlignment="Center" 
                                 FontWeight="Medium" Margin="0,0,15,0"/>

                        <ComboBox Name="DepartmentFilter"
                                   materialDesign:HintAssist.Hint="Matière"
                                  Margin="0,0,15,0">
                            <ComboBoxItem Content="Toutes matières" IsSelected="True"/>
                            <ComboBoxItem Content="Mathématiques"/>
                            <ComboBoxItem Content="Français"/>
                            <ComboBoxItem Content="Sciences"/>
                            <ComboBoxItem Content="Histoire-Géographie"/>
                            <ComboBoxItem Content="Arts Plastiques"/>
                            <ComboBoxItem Content="Éducation Physique"/>
                            <ComboBoxItem Content="Musique"/>
                        </ComboBox>

                        <ComboBox Name="LevelFilter"
                                materialDesign:HintAssist.Hint="Niveau"
                                  Margin="0,0,15,0">
                            <ComboBoxItem Content="Tous niveaux" IsSelected="True"/>
                            <ComboBoxItem Content="CP"/>
                            <ComboBoxItem Content="CE1"/>
                            <ComboBoxItem Content="CE2"/>
                            <ComboBoxItem Content="CM1"/>
                            <ComboBoxItem Content="CM2"/>
                        </ComboBox>

                        <ComboBox Name="SortFilter"
                                materialDesign:HintAssist.Hint="Trier par" Margin="10,0,10,0"
                                  Style="{StaticResource MaterialDesignComboBox}">
                            <ComboBoxItem Content="Nom A-Z" IsSelected="True"/>
                            <ComboBoxItem Content="Nom Z-A"/>
                            <ComboBoxItem Content="Ancienneté"/>
                            <ComboBoxItem Content="Matière"/>
                            <ComboBoxItem Content="Classe"/>
                        </ComboBox>

                        <Button Style="{StaticResource MaterialDesignIconButton}" 
                              ToolTip="Réinitialiser filtres">
                            <materialDesign:PackIcon Kind="FilterRemove"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>

