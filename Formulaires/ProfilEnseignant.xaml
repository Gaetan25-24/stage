            <ScrollViewer Name="ProfilesScrollViewer" VerticalScrollBarVisibility="Auto">
                <ItemsControl Name="TeachersGrid">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="3"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

