<UserControl x:Class="MonProjet.Parametres"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MonProjet"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="#F5F5F5"
             Width="850">
    <UserControl.Resources>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2196F3"/>
            <Setter Property="Margin" Value="0,20,0,10"/>
        </Style>

        <Style x:Key="SettingCardStyle" TargetType="materialDesign:Card">
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2"/>
        </Style>

        <Style x:Key="SettingTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="SettingDescriptionStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Header -->
            <Grid Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Settings" Width="32" Height="32" 
                                           Foreground="#2196F3" VerticalAlignment="Center"/>
                    <TextBlock Text="Paramètres Système" FontSize="28" FontWeight="Bold" 
                             Foreground="#333" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Style="{StaticResource MaterialDesignRaisedButton}" 
                           Background="#4CAF50" Foreground="White" Margin="0,0,10,0"
                           >
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ContentSave" Width="16" Height="16"/>
                            <TextBlock Text="Enregistrer" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}" 
                           >
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Restore" Width="16" Height="16"/>
                            <TextBlock Text="Réinitialiser" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Paramètres Généraux -->
            <TextBlock Text="Paramètres Généraux" Style="{StaticResource SectionHeaderStyle}"/>

            <materialDesign:Card Style="{StaticResource SettingCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0">
                        <TextBlock Text="Nom de l'École" Style="{StaticResource SettingTitleStyle}"/>
                        <TextBlock Text="Nom affiché dans l'application et les rapports" 
                                 Style="{StaticResource SettingDescriptionStyle}"/>
                    </StackPanel>
                    <TextBox Grid.Row="0" Grid.Column="1" Name="SchoolNameTextBox" 
                           Text="École Primaire Saint-Martin" Width="250" 
                           materialDesign:HintAssist.Hint="Nom de l'école"/>

                    <Separator Grid.Row="1" Grid.ColumnSpan="2" Margin="0,15"/>

                    <StackPanel Grid.Row="2" Grid.Column="0">
                        <TextBlock Text="Adresse de l'École" Style="{StaticResource SettingTitleStyle}"/>
                        <TextBlock Text="Adresse complète de l'établissement" 
                                 Style="{StaticResource SettingDescriptionStyle}"/>
                    </StackPanel>
                    <TextBox Grid.Row="2" Grid.Column="1" Name="SchoolAddressTextBox" 
                           Text="123 Rue de l'Education, 75000 Paris" Width="250"
                           materialDesign:HintAssist.Hint="Adresse complète"/>
                </Grid>
            </materialDesign:Card>

            <!-- Paramètres de Pointage -->
            <TextBlock Text="Paramètres de Pointage" Style="{StaticResource SectionHeaderStyle}"/>

            <materialDesign:Card Style="{StaticResource SettingCardStyle}">
                <StackPanel>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Heure de Début de Service" Style="{StaticResource SettingTitleStyle}"/>
                            <TextBlock Text="Heure officielle de début de la journée scolaire" 
                                     Style="{StaticResource SettingDescriptionStyle}"/>
                        </StackPanel>
                        <materialDesign:TimePicker Grid.Column="1" Name="StartTimeTimePicker" 
                                                 SelectedTime="08:00" Width="120"/>
                    </Grid>

                    <Separator Margin="0,0,0,15"/>

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Heure de Fin de Service" Style="{StaticResource SettingTitleStyle}"/>
                            <TextBlock Text="Heure officielle de fin de la journée scolaire" 
                                     Style="{StaticResource SettingDescriptionStyle}"/>
                        </StackPanel>
                        <materialDesign:TimePicker Grid.Column="1" Name="EndTimeTimePicker" 
                                                 SelectedTime="16:30" Width="120"/>
                    </Grid>

                    <Separator Margin="0,0,0,15"/>

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Tolérance de Retard (minutes)" Style="{StaticResource SettingTitleStyle}"/>
                            <TextBlock Text="Délai de grâce avant qu'un retard soit considéré comme tel" 
                                     Style="{StaticResource SettingDescriptionStyle}"/>
                        </StackPanel>
                        <TextBox Grid.Column="1" Name="LateToleranceTextBox" Text="5" Width="80"
                               materialDesign:HintAssist.Hint="Minutes"/>
                    </Grid>

                    <Separator Margin="0,0,0,15"/>

                </StackPanel>
            </materialDesign:Card>

            <!-- Sécurité et Accès -->
            <TextBlock Text="Sécurité et Accès" Style="{StaticResource SectionHeaderStyle}"/>

            <materialDesign:Card Style="{StaticResource SettingCardStyle}">
                <StackPanel>

                    <Separator Margin="0,0,0,15"/>

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Durée de Session (heures)" Style="{StaticResource SettingTitleStyle}"/>
                            <TextBlock Text="Durée avant déconnexion automatique par inactivité" 
                                     Style="{StaticResource SettingDescriptionStyle}"/>
                        </StackPanel>
                        <TextBox Grid.Column="1" Name="SessionDurationTextBox" Text="8" Width="80"
                               materialDesign:HintAssist.Hint="Heures"/>
                    </Grid>

                    <Separator Margin="0,0,0,15"/>

                    <Separator Margin="0,0,0,15"/>

                    <Grid>
                        <StackPanel>
                            <TextBlock Text="Gestion des Mots de Passe" Style="{StaticResource SettingTitleStyle}"/>
                            <TextBlock Text="Configurer les règles de sécurité des mots de passe" 
                                     Style="{StaticResource SettingDescriptionStyle}" Margin="0,0,0,10"/>

                            <WrapPanel>
                                <Button Style="{StaticResource MaterialDesignOutlinedButton}" 
                                       Margin="0,0,10,0">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Security" Width="16" Height="16"/>
                                        <TextBlock Text="Politique des Mots de Passe" Margin="5,0,0,0"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource MaterialDesignOutlinedButton}" 
                                       >
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="KeyChange" Width="16" Height="16"/>
                                        <TextBlock Text="Forcer Reset Mots de Passe" Margin="5,0,0,0"/>
                                    </StackPanel>
                                </Button>
                            </WrapPanel>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </materialDesign:Card>
        </StackPanel>
    </ScrollViewer>
</UserControl>
